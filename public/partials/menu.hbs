    <section>
        <div class="container2 mt-2">
            <div class="cards">
               {{#each products}}
                 <div class="card1 card">
                    <div class="product_image">
                        <img src="../images/{{product_image}}" alt="">
                    </div>
                    <div class="product_name">
                        <p>{{product_name}}</p>
                    </div>
                    <div class="product_price">
                        <p>Half: <span>{{half_price}}Rs.</span></p>
                        <p>Full: <span>{{full_price}}Rs.</span></p>
                    </div>
                </div>
               {{/each}}
            </div>
        </div>
    </section>