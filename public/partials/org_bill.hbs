<section>
    <div class="container login-signup">
        <div class="form">
        <div class="form-heading">
            Make Bill!
        </div>
            <form action="/biller/bill" method="post">
                <div class="input-group">
                    <label for="customer_name" >Customer Name</label>
                    <input type="text" name="customer_name" id="customer_name" placeholder="Enter customer Name" value="{{customer_name}}" 
                    {{#if customer_name}}
                        {{readonly}}
                    {{/if}}
                    >
                </div>
                <div class="input-group">
                    <label for="customer_contact" >Customer Contact</label>
                    <input type="text" name="customer_contact" id="customer_contact" placeholder="Enter customer No." value="{{customer_mobile}}" {{readonly}}>
                </div>
                <div class="input-group">
                    <input type="text" name="menu_id" id="menu_id" placeholder="Enter menu id" value="{{pr_id}}" readonly hidden>
                </div>
                <div class="input-group">
                    <label for="qty">Quantity</label>
                    <input type="text" name="qty" id="qty" placeholder="Enter Qty" value="{{qty}}" readonly>
                </div>
                <div class="input-group">
                    <label for="plate_type">Plate Type</label>
                    <input type="text" name="plate_type" id="plate_type" placeholder="Enter plate type" value="{{type}}" readonly>
                </div>
                <div class="input-group">
                    <label for="item_price">Item Price</label>
                    <input type="text" name="item_price" id="item_price" placeholder="Enter item price" value="{{price_per_qty}}" readonly>
                </div>
                <div class="input-group">
                    <label for="total_amount">Total Amount</label>
                    <input type="text" name="total_amount" id="total_amount" placeholder="Enter total amount" value="{{total_price}}" readonly>
                </div>
                <div class="input-group">
                    <button type="submit" class="btn2">Print Bill</button>
                </div>
            </form>
        </div>
    </div>
</section>