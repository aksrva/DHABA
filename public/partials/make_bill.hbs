<section>
    <div class="container login-signup">
        <div class="form">
        <div class="form-heading">
            Make Bill!
        </div>
            <form action="/biller/make-bill" method="post">
                <div class="input-group">
                    <label for="customer_contact" >Customer Contact</label>
                    <input type="text" name="customer_contact" id="customer_contact" placeholder="Enter customer No.">
                </div>
                <div class="input-group">
                    <input type="text" name="product_id" id="product_id" placeholder="Enter product id" value="{{p_id}}" readonly hidden>
                </div>
                <div class="input-group">
                    <input type="number" name="qty" id="qty" placeholder="Enter qty">
                </div>
                <div class="input-group">
                   <select name="plate_type">
                        <option value="half plate">Half Plate</option>
                        <option value="full plate">Full Plate</option>
                   </select>
                </div>
                
                <div class="input-group">
                    <button type="submit" class="btn2">Check Customer</button>
                </div>
            </form>
        </div>
    </div>
</section>